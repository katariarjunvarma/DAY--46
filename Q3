#include <iostream>

using namespace std;

struct Node {
    int data;
    Node* left;
    Node* right;

    Node(int data) {
        this->data = data;
        this->left = nullptr;
        this->right = nullptr;
    }
};

int findMaximum(Node* root) {
    if (root == nullptr) {
        return INT_MIN; // Return the minimum integer value if the tree is empty
    }

    int maxLeft = findMaximum(root->left);
    int maxRight = findMaximum(root->right);

    return max(max(maxLeft, maxRight), root->data);
}

int main() {
    Node* root = new Node(10);
    root->left = new Node(20);
    root->right = new Node(30);
    root->left->left = new Node(40);
    root->left->right = new Node(50);

    int maxValue = findMaximum(root);
    cout << "Maximum value: " << maxValue << endl;

    return 0;
}
